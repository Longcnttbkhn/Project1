<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="ID Phòng"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0f0f0f"
                    android:layout_gravity="center"
                    android:textSize="22sp"
                    android:id="@+id/qlp_idP" />
                <Button
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thay đổi"
                    android:id="@+id/qlp_thayDoi" />
            </TableRow>
        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#0f0f0f"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_width="match_parent"
                android:stretchColumns="1"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:textSize="20sp"
                        android:text="Diện tích"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#0f0f0f"
                        android:id="@+id/qlp_dienTich" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="m2"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:textSize="20sp"
                        android:text="Giá phòng"
                        />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="#0f0f0f"
                        android:id="@+id/qlp_gia" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Nghìn đồng"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:textSize="20sp"
                        android:text="Khu vực"/>
                    <TextView
                        android:layout_span="2"
                        android:textSize="18sp"
                        android:textColor="#0f0f0f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/qlp_khuVuc"
                         />
                </TableRow>
            </TableLayout>
            <TextView
                android:text="Địa chỉ"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#0f0f0f"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/qlp_diaChi" />
            <TextView
                android:text="Thông tin bổ sung"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:textColor="#0f0f0f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/qlp_boSung" />
            <TableLayout
                android:stretchColumns="1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tình trạng phòng"
                        android:textSize="20sp"/>
                    <Spinner
                        android:layout_marginLeft="2dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/qlp_tinhTrang"
                        android:spinnerMode="dialog" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số người"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#0f0f0f"
                        android:id="@+id/qlp_soNguoi"/>
                </TableRow>
            </TableLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:text="Những người đang ở đây"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#0f0f0f"
                android:id="@+id/qlp_listUser" />
            <TextView
                android:layout_marginTop="10dp"
                android:text="Câu hỏi bảo mật"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/qlp_cauHoi"
                android:spinnerMode="dialog">
            </Spinner>
            <TextView
                android:layout_marginTop="5dp"
                android:text="Trả lời câu hỏi bảo mật"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0f0f0f"
                android:id="@+id/qlp_traLoi" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đánh giá"
                android:textSize="20sp"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:numStars="5"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:id="@+id/qlp_danhGia"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginRight="15dp"
                android:text="Xóa phòng"
                android:id="@+id/qlp_xoa" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"
                android:text="Rời phòng"
                android:id="@+id/qlp_roiPhong" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>